{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "./src",
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "eslint.config.mjs"],
  "exclude": ["node_modules", "dist"]
}
